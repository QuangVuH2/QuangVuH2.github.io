@model MyClass.Models.Contact

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                @using (Html.BeginForm("Delete", "Contact", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <strong>XÁC NHẬN XÓA THÔNG BÁO</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Trash", "Contact")" class="btn btn-sm btn-info"><i class="fas fa-arrow-left"></i> Quay lại</a>
                            <button class="btn btn-sm btn-danger" type="submit"><i class="fas fa-trash-alt"></i> Xóa</button>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th colspan="4" style="text-align:center; font-size:20px">Chi Tiết Thông Báo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Tên người gửi</td>
                            <td colspan="3">@Model.FullName</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td colspan="3">@Model.Email</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại</td>
                            <td colspan="3">@Model.Phone</td>
                        </tr>
                    </tbody>
                    <tbody>
                        <tr>
                            <td>Tiêu đề</td>
                            <td>Nội dung</td>
                            <td>Ngày gửi</td>

                        </tr>
                        <tr>
                            <td>@Model.Title</td>
                            <td>@Model.Detail</td>
                            <td>@string.Format("{0:dd/MM/yyyy}", Model.CreateAt)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
