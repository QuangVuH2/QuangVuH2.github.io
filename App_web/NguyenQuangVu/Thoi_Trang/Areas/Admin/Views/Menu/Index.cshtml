@model IEnumerable<MyClass.Models.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Index", "Menu", FormMethod.Post))
{
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Menu</strong>
                        </div>
                        <div class="col-md-6 text-right">                 
                            <a href="@Url.Action("Trash", "Menu")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thùng rác</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <div class="row">
                        <div class="col-md-4">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-header" id="headingPostition">
                                        <span>Vị trí</span>
                                        <select name="Position" class="form-control">
                                            <option value="mainmenu">Main Menu</option>
                                            <option value="footermenu">Footer Menu</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingCategory">
                                        <strong>Danh mục loại sản phẩm</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseCategory" aria-expanded="true"
                                              aria-controls="collapseCategory">
                                            <i class="fas fa-plus"></i>
                                        </span>

                                    </div>

                                    <div id="collapseCategory" class="collapse p-2 m-2" aria-labelledby="headingCategory"
                                         data-parent="#accordionExample">
                                        @foreach (var row in ViewBag.listCategory)
                                        {
                                            if (row.Status != 0)
                                            {
                                                <div class="mb-3">
                                                    <input name="itemCat" value="@row.Id" id="category_@row.Id" type="checkbox">
                                                    <label for="category_@row.Id">@row.Name</label>
                                                </div>
                                            }
                                        }
                                        <div class="mb-3">
                                            <input type="submit" name="AddCategory" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingTopic">
                                        <strong>Chủ đề bài viết</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseTopic" aria-expanded="true" aria-controls="collapseTopic">
                                            <i class="fas fa-plus"></i>
                                        </span>

                                    </div>

                                    <div id="collapseTopic" class="collapse p-2 m-2" aria-labelledby="headingTopic"
                                         data-parent="#accordionExample">
                                        @foreach (var row in ViewBag.listTopic)
                                        {
                                            <div class="mb-3">
                                                <input name="itemTopic" value="@row.Id" id="topic_@row.Id" type="checkbox">
                                                <label for="topic_@row.Id">@row.Name</label>
                                            </div>
                                        }                                       
                                        <div class="mb-3">
                                            <input type="submit" name="AddTopic" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingBrand">
                                        <strong>Thương hiệu</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseBrand" aria-expanded="true" aria-controls="collapseBrand">
                                            <i class="fas fa-plus"></i>
                                        </span>

                                    </div>

                                    <div id="collapseBrand" class="collapse p-2 m-2" aria-labelledby="headingBrand"
                                         data-parent="#accordionExample">
                                        <div class="mb-3">
                                            <input name="nameBrand[]" value="1" id="Brand1" type="checkbox">
                                            <label for="Brand1">Thương hiệu 1</label>
                                        </div>
                                        <div class="mb-3">
                                            <input name="nameBrand[]" value="1" id="Brand2" type="checkbox">
                                            <label for="Brand2">Thương hiệu 2</label>
                                        </div>
                                        <div class="mb-3">
                                            <input type="submit" name="AddBrand" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingPage">
                                        <strong>Trang đơn</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapsePage" aria-expanded="true" aria-controls="collapsePage">
                                            <i class="fas fa-plus"></i>
                                        </span>

                                    </div>

                                    <div id="collapsePage" class="collapse p-2 m-2" aria-labelledby="headingPage"
                                         data-parent="#accordionExample">
                                        @foreach (var row in ViewBag.listPage)
                                        {
                                            <div class="mb-3">
                                                <input name="itemPage" value="@row.Id" id="page_@row.Id" type="checkbox">
                                                <label for="page_@row.Id">@row.Title</label>
                                            </div>
                                        }
                                    <div class="mb-3">
                                        <input type="submit" name="AddPage" value="Thêm"
                                               class="btn btn-success form-control">
                                    </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header" id="headingCustom">
                                        <strong>Tùy chỉnh</strong>
                                        <span class="float-right btn btn-sm btn-success" data-toggle="collapse"
                                              data-target="#collapseCustom" aria-expanded="true" aria-controls="collapseCustom">
                                            <i class="fas fa-plus"></i>
                                        </span>
                                    </div>

                                    <div id="collapseCustom" class="collapse p-2 m-2" aria-labelledby="headingCustom"
                                         data-parent="#accordionExample">
                                        <div class="mb-3">
                                            <label>Tên menu</label>
                                            <input name="name" class="form-control" id="checkid" type="text">
                                        </div>
                                        <div class="mb-3">
                                            <label>Liên kết</label>
                                            <input name="link" class="form-control" type="text">
                                        </div>
                                        <div class="mb-3">
                                            <input type="submit" name="AddCustom" value="Thêm"
                                                   class="btn btn-success form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <table class="table table-bordered">
                                <tr>
                                    <th>Tên menu</th>
                                    <th>Liên kết</th>                                    
                                    <th>Kiểu menu</th>
                                    <th>Vị trí</th>
                                    <th>Chức năng</th>
                                    <th>ID</th>
                                </tr>                               
                                @foreach (var item in Model)
                                {                                   
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Link</td>                                        
                                        <td>@item.TypeMenu</td>
                                        <td>@item.Position</td>
                                        <td class="text-center">
                                            @if (item.Status == 1)
                                            {
                                                <a href="@Url.Action("Status", "Menu", new { id = item.Id })" class="btn btn-sm btn-success"><i class="fas fa-toggle-on"></i> </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Status", "Menu", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i> </a>
                                            }
                                            <a href="@Url.Action("Details", "Menu", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-eye"></i> </a>
                                            <a href="@Url.Action("Edit", "Menu", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> </a>
                                            <a href="@Url.Action("DelTrash", "Menu", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> </a>
                                        </td>
                                        <td>@item.Id</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
}
