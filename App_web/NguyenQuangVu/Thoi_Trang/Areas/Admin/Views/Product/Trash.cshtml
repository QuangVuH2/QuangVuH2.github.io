@model IEnumerable<MyClass.View_Models.ProductView>
@{
    ViewBag.Title = "Thùng Rác";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {

    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section footer {

    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">THÙNG RÁC DANH MỤC LOẠI SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-info"><i class="fas fa-arrow-left"></i> Quay lại</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 20px">#</th>
                            <th class="text-center" style="width: 100px">Hình</th>
                            <th>Tên sản phẩm</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Giá bán</th>
                            <th>Giá khuyến mãi</th>
                            <th>Ngày tạo</th>
                            <th class="text-center" style="width: 180px">Chức năng</th>
                            <th class="text-center" style="width: 20px">ID</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkId" value="" /></td>
                                <td><img src="~/Public/images/products/@item.Img" alt="TenHinh" class="img-fluid" /></td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.CatId
                                </td>
                                <td>
                                    @item.SupplierId
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.PriceSale
                                </td>
                                <td>
                                    @item.CreateAt
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Restore_Trash", "Product", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fas fa-trash-restore"></i> </a>
                                    <a href="@Url.Action("Delete", "Product", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> </a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->